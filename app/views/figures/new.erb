<h2>New Figure</h2>

<form method="post" action="/figures/new">
	<label for="">Figure Name:</label><input type="text" name="figure_name" id="figure[name]">
	<br><br>
	<label for="">Titles:</label>
	<% @titles.each do |title| %>
		<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%= title.name%></input>
	<% end %>
	<br><br>
	<label for="">Landmarks:</label>
	<% @landmarks.each do |landmark| %>
		<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%= landmark.name %></input>
	<% end %>
	<br><br>
	<p>And/Or Create New Stuff:</p>
	<label for="">New Title:</label><input type="text" name="new_title" id="title[name]">
	<br><br>
	<label for="">New Landmark:</label><input type="text" name="new_landmark" id="landmark[name]">
		<br><br>
	<input type="submit" value="Create New Figure">
</form>
